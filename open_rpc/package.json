{
  "name": "openrpc-validator",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">= 20.9 < 21"
  },
  "devDependencies": {
    "@types/jest": "~29.5",
    "@types/json-schema": "7.0.3",
    "jest": "~29.7",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "ts-interface-checker": "^1.0.2",
    "ts-jest": "~29.1",
    "ts-interface-builder": "^0.3.3",
    "typescript": "~5.4",
    "babel-jest": "^29.7.0"
  },
  "scripts": {
    "generate:download": "curl -o ./massa.api.json https://raw.githubusercontent.com/massalabs/massa/main/massa-node/base_config/openrpc.json",
    "generate:client": "open-rpc-generator generate -c openrpc.config.json && mkdir -p generated && mv tmp/client/typescript/src/index.ts generated/client.ts && rm -r tmp && rm massa.api.json",
    "generate:test": "ts-interface-builder generated/client.ts",
    "generate": "npm-run-all generate:*",
    "test": "npm run generate && npm run test:run",
    "test:run": "jest --detectOpenHandles --forceExit --setupFiles dotenv/config",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@open-rpc/client-js": "1.8.1",
    "@open-rpc/generator": "1.22.3",
    "@open-rpc/meta-schema": "1.14.2",
    "@open-rpc/schema-utils-js": "1.15.0",
    "ts-loader": "^9.4.2",
    "tslib": "~2.6"
  },
  "volta": {
    "node": "20.12.2"
  }
}